theme = "Atom"
# theme = "0x96f"

keybind = cmd+s>r=reload_config
keybind = cmd+s>x=close_surface

# Make splits
keybind = cmd+s>g=new_split:right
keybind = cmd+s>s=new_split:left
keybind = cmd+s>f=new_split:down
keybind = cmd+s>d=new_split:up

# Goto splits
keybind = cmd+s>l=goto_split:right
keybind = cmd+s>h=goto_split:left

keybind = cmd+s>j=goto_split:bottom
keybind = cmd+s>k=goto_split:top

# Tab Nav
keybind = cmd+h=previous_tab
keybind = cmd+l=next_tab

