#theme = "arcoirius"
theme = "Atom"

keybind = cmd+s>r=reload_config
keybind = cmd+s>x=close_surface

# Make splits
keybind = cmd+s>g=new_split:right
keybind = cmd+s>s=new_split:left
keybind = cmd+s>f=new_split:down
keybind = cmd+s>d=new_split:up

# Goto splits
keybind = cmd+l=goto_split:right
keybind = cmd+h=goto_split:left

keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top

# Tab Nav
keybind = cmd+s>h=previous_tab
keybind = cmd+s>l=next_tab

